<Page
    x:Class="BookShelf.Profile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BookShelf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="RessourceDict.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="Beige" Loaded="Grid_Loaded">
        <Grid x:Name="grdProfile" Margin="0,0,0,0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid x:Name="grdSub">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60*"/>
                    <ColumnDefinition Width="40*"/>
                </Grid.ColumnDefinitions>
                <Image x:Name="imgProfile" Height="200"  VerticalAlignment="Top" Source="Assets/StoreLogo.png"/>
                <StackPanel x:Name="stpnlData1" Grid.Column="1">
                    <TextBlock x:Name="txblPseudo" HorizontalAlignment="Left" Margin="10,2" TextWrapping="Wrap" Text="Pseudo : " VerticalAlignment="Center"/>
                    <TextBlock x:Name="txblEmail" HorizontalAlignment="Left" Margin="10,2" Grid.Row="1" TextWrapping="Wrap" Text="E-mail : " VerticalAlignment="Center"/>
                    <TextBlock x:Name="txblBirthday" HorizontalAlignment="Left" Margin="10,2" Grid.Row="2" TextWrapping="Wrap" Text="Anniversaire : " VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
            <StackPanel x:Name="stpnData2" Grid.Row="1">
                <TextBlock x:Name="txblLikedGenre" HorizontalAlignment="Left" Margin="10,2" Grid.Row="3" TextWrapping="Wrap" Text="Genre préféré : " VerticalAlignment="Center"/>
                <TextBlock x:Name="txblFavBook" HorizontalAlignment="Left"  Grid.Row="4" Margin="10,2" TextWrapping="Wrap" Text="Livre Préféré :" VerticalAlignment="Center"/>
                <TextBlock x:Name="txblProfileCréation" HorizontalAlignment="Left"  Grid.Row="5" Margin="10,2" TextWrapping="Wrap" Text="Date de création compte : " VerticalAlignment="Center"/>
                <TextBlock x:Name="txblLastCo" HorizontalAlignment="Left"  Grid.Row="6" Margin="10,2" TextWrapping="Wrap" Text="Date de dernière connexion : " VerticalAlignment="Center"/>
                <Button x:Name="btModifProf" Grid.Row="2" Content="Modifier les informations personnelles" HorizontalAlignment="Center" Click="btModifProf_Click" Margin="0,20,0,0"/>
                <Button x:Name="btDeleteProf" Grid.Row="2" Content="Supprimer le profil" HorizontalAlignment="Center" Click="btDeleteProf_Click" Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>

    </Grid>
</Page>

