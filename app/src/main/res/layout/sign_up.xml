<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/RLSignUp">
    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/SignUpFirstName"
        android:hint="Prénom"
        android:layout_marginTop="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/SignUpPwd" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/SignUpMail"
        android:hint="Adresse email"
        android:layout_below="@+id/SignUpFirstName"
        android:layout_alignLeft="@+id/SignUpFirstName"
        android:layout_alignStart="@+id/SignUpFirstName"
        android:layout_marginTop="42dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/SignUpPwd"
        android:hint="password"
        android:selectAllOnFocus="true"
        android:layout_below="@+id/SignUpMail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/SignUpPwd2"
        android:hint="Vérification password"
        android:layout_below="@+id/SignUpPwd"
        android:layout_alignLeft="@+id/SignUpPwd"
        android:layout_alignStart="@+id/SignUpPwd"
        android:layout_marginTop="55dp" />

    <Button
        android:text="Créer son compte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSignUp"
        android:onClick="onClickSignUp"
        android:layout_below="@+id/SignUpPwd2"
        android:layout_marginTop="63dp"
        android:layout_alignLeft="@+id/SignUpPwd2"
        android:layout_alignStart="@+id/SignUpPwd2"
        android:layout_alignRight="@+id/SignUpPwd2"
        android:layout_alignEnd="@+id/SignUpPwd2" />

</RelativeLayout>